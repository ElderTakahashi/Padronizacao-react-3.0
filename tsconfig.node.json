{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
